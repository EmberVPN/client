{
	"extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
	"include": [
		"src/renderer/env.d.ts",
		"src/renderer/**/*",
		"src/renderer/ui-elements",
		"src/renderer/**/*.tsx",
		"src/preload/*.d.ts",
		"types/*",
		"assets",
		"src/*.ts",
		"src/main/class/Config.ts"
	],
	"compilerOptions": {
		"composite": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@renderer/*": [
				"src/renderer/src/*"
			],
			"@ui-elements/*": [
				"src/renderer/ui-elements/*"
			],
			"@assets/*": [
				"assets/*"
			],
		}
	}
}